{
  "name": "Panas",
  "scales": {
    "pa": {
      "code": "PA",
      "name": "affettività positiva"
    },
    "na": {
      "code": "NA",
      "name": "affettività negativa"
    }
  },
  "norms": {
    "getNormsBiblio": "const fn = () => 'Bottesi, G., Ghisi, M., Altoè, G., Conforti, E., Melli, G., & Sica, C. (2015). The Italian version of the Depression Anxiety Stress Scales-21: Factor structure and psychometric properties on community and clinical samples. Comprehensive psychiatry, 60, 170-181.'",
    "getNorms": "const fn = ({ settingId }, scaleId) => `${settingId === 'clinical' ? 'clinical' : 'normal'}.${scaleId}`",
    "normal.pa": "const fn = ({ meanScore }) => Math.max(0, Math.min(100, 50+10*((meanScore-2.4)/2.6))).toFixed(0)",
    "normal.na": "const fn = ({ meanScore }) => Math.max(0, Math.min(100, 50+10*((meanScore-3.5)/3.2))).toFixed(0)",
    "clinical.pa": "const fn = ({ meanScore }) => Math.max(0, Math.min(100, 50+10*((meanScore-5.5)/4.6))).toFixed(0)",
    "clinical.na": "const fn = ({ meanScore }) => Math.max(0, Math.min(100, 50+10*((meanScore-7.7)/5.6))).toFixed(0)"
  }
}
